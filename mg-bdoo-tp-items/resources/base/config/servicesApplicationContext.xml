<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN"
    "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
	<bean id="abstractServiceImpl" class="base.service.AbstractServiceImpl"
		abstract="true">
		<property name="repositoryFinder">
			<idref bean="hibernateRepositoryFinder" />
		</property>
		<!-- Si se quiere usar el repositorio de memoria se deben descomentar las 
			siguientes lineas y comentar las anteriores! -->
		<!-- <property name="repositoryFinder"> -->
		<!-- <idref bean="memoryRepositoryFinder" /> -->
		<!-- </property> -->
<!-- 		<property name="dtoFactory"> -->
<!-- 			<idref bean="dtoFactory" /> -->
<!-- 		</property> -->
	</bean>


	<!-- ==================== Servicio de ItemTracker =================== -->

	<bean id="itemTrackerServiceTarget" class="itemTracker.service.ItemTrackerServiceImpl"
		parent="abstractServiceImpl">
	</bean>

	<bean id="itemTrackerService"
		class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
		<property name="target">
			<ref local="itemTrackerServiceTarget" />
		</property>
		<property name="transactionManager">
			<idref bean="transactionManager" />
		</property>
		<property name="transactionAttributes">
			<props>
				<prop key="*">PROPAGATION_REQUIRED</prop>
			</props>
		</property>
	</bean>

	<!-- ==================== Servicio de User =================== -->

	<bean id="userServiceTarget" class="user.service.UserServiceImpl"
		parent="abstractServiceImpl">
	</bean>

	<bean id="userService"
		class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
		<property name="target">
			<ref local="userServiceTarget" />
		</property>
		<property name="transactionManager">
			<idref bean="transactionManager" />
		</property>
		<property name="transactionAttributes">
			<props>
				<prop key="*">PROPAGATION_REQUIRED</prop>
			</props>
		</property>
	</bean>

	<!-- ================ Contenedor de servicios =================== -->

	<bean id="serviceFinder" class="base.service.ServiceFinder"
		factory-method="getInstance">
		<property name="userService">
			<idref bean="userService" />
		</property>
		<property name="itemTrackerService">
			<idref bean="itemTrackerService" />
		</property>
	</bean>

</beans>

