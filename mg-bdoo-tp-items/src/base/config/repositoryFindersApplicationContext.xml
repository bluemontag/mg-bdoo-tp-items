<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN"
    "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>

	<import resource="repositoryFindersApplicationContext.xml" />

	<bean id="MemoryRrepositoryFinder" class="base.repository.MemoryRepositoryFinder">
		<property name="itemTrackerRepository">
			<idref bean="memoryItemTrackerRepository" />
		</property>
		<property name="userRepository">
			<idref bean="memoryUserRepository" />
		</property>
	</bean>

	<bean id="HibernateRepositoryFinder" class="base.repository.HibernateRepositoryFinder">
		<property name="itemTrackerRepository">
			<idref bean="hibernateItemTrackerRepository" />
		</property>
		<property name="userRepository">
			<idref bean="hibernateUserRepository" />
		</property>
	</bean>

</beans>